extends layout

block content
  .timeline
    .followings.half
      h2 팔로잉 목록
      if user.Follow_Followings
        for following in user.Follow_Followings
          div= following.nick
    .followers.half
      h2 팔로워 목록
      if user.Follow_Followers
        for follower in user.Follow_Followers
          div= follower.nick
    form#profile-form(method='post', action='/user/profile')
      input(name='nick')
      button 닉네임 수정